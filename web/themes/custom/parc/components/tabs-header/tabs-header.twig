<div class="tabs-header" {% if color %}style="background-color: {{ color }};"{% endif %}>
  <div class="container">
    <div class="tabs-header__title">
      <div class="svg-title">{{ title }}</div>
    </div>
  </div>
</div>

{% if menu_entries %}
  <div class="tabs-header__menu" {% if color %}style="background-color: {{ color }};"{% endif %}>
    <ul class="nav nav-tabs" role="tablist">
      {% for entry in menu_entries %}
        <li class="nav-item" role="presentation">
          <a class="nav-link{% if entry.is_active %} active{% endif %}"
             href="{{ entry.link }}"
             {% if entry.is_active %}aria-current="page"{% endif %}>
            {{ entry.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endif %}
