<div class="exposure-source-card">
  <div class="exposure-source-card__name">
    {{ name }}
  </div>

  <div class="exposure-source-card__icon">
    {{ icon }}
  </div>

  <div class="exposure-source-card__chemicals">
    {% for chemical in chemicals %}
      <span class="exposure-source-card__chemical" style="--chemical-color: {{ chemical.color }}">
        {{ chemical.name }}
      </span>
    {% endfor %}
  </div>
</div>
