{% apply spaceless %}
  <div class="exposure-source-card">
    <div class="exposure-source-card__name">
      {{ name }}
    </div>

    <div class="exposure-source-card__icon">
      {{ icon }}
    </div>

    <div class="exposure-source-card__chemicals">
      {% for chemical in chemicals %}
        <span class="exposure-source-card__chemical" data-chemical-target="{{ chemical.id }}" style="--chemical-color: {{ chemical.color }}">{{ chemical.name | trim }}</span>
      {% endfor %}
    </div>
  </div>
{% endapply %}