<div class="sria-card sria-card--{{ paragraph.field_sria_card_style.value|default('default') }}" style="
  {{ paragraph.field_background_color.color ? '--bg-color:' ~ paragraph.field_background_color.color ~ ';' }}
  {{ paragraph.field_border_color.color ? '--border-color:' ~ paragraph.field_border_color.color ~ ';' }}
  {{ paragraph.field_text_color.color ? '--text-color:' ~ paragraph.field_text_color.color ~ ';' }}
  {{ paragraph.field_title_color.color ? '--title-color:' ~ paragraph.field_title_color.color ~ ';' }}"
  data-aos="fade-up" data-aos-duration="1000" data-aos-once="true"
>
  {% if not paragraph.field_number.isEmpty %}
    <div class="sria-card__number">{{ content.field_number }}</div>
  {% endif %}
  {% if not paragraph.field_title.isEmpty %}
    <div class="sria-card__title">{{ content.field_title }}</div>
  {% endif %}
  {% if not paragraph.field_image.isEmpty %}
    <div class="sria-card__image">{{ content.field_image }}</div>
  {% endif %}
  {% if not paragraph.field_body.isEmpty %}
    <div class="sria-card__description">{{ content.field_body }}</div>
  {% endif %}
</div>
