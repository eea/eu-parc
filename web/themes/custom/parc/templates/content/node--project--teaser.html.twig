        <circle cx="133.602" cy="4.60937" r="4" transform="rotate(-180 133.602 4.60937)" fill="black"/>
        <circle cx="267.164" cy="4.60937" r="4" transform="rotate(-180 267.164 4.60937)" fill="black"/>
