{#
/**
 * @file
 * Parc theme implementation for a field.
 */
#}

{% set interval = 4000 %}
{% if hero_carousel %}
  {% set interval = 900000 %}
{% endif %}

<div id="{{ carousel_id }}" data-bs-ride="{% if hero_carousel %}true{% else %}true{% endif %}" class="carousel slide" data-interval="{{ interval }}">

  <div class="carousel-indicators">
    {% for item in items %}
      <button type="button" data-bs-target="#{{ carousel_id }}" data-bs-interval="false" data-bs-slide-to="{{ loop.index0 }}" class="{{ loop.first ? 'active' }}" aria-label="Slide {{ loop.index }}"></button>
    {% endfor %}
  </div>

  <div class="carousel-inner" data-interval="{{ interval }}">
    {% for item in items %}
      <div class="carousel-item{{ loop.first ? ' active' }}">
        {{- item.content -}}
      </div>
    {% endfor %}
  </div>
</div>
