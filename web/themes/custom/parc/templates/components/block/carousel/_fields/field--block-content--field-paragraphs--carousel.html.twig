{#
/**
 * @file
 * Parc theme implementation for a field.
 */
#}

<div id="mainCarousel" class="carousel slide" data-bs-ride="true" data-interval="false">
  <div class="carousel-indicators">
    {% for item in items %}
      <button type="button" data-bs-target="#mainCarousel" data-bs-interval="false" data-bs-slide-to="{{ loop.index0 }}" class="{{ loop.first ? 'active' }}" aria-label="Slide {{ loop.index }}"></button>
    {% endfor %}
  </div>

  <div class="carousel-inner" data-interval="false">
    {% for item in items %}
      <div class="carousel-item{{ loop.first ? ' active' }}">
        {{- item.content -}}
      </div>
    {% endfor %}
  </div>
</div>
