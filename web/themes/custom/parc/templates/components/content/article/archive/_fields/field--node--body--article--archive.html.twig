{#
/**
 * @file
 * Parc theme implementation for a field.
 */
#}

{%
  set classes = [
    'field',
    'mb-lg-3',
    'd-none',
    'd-lg-block',
    'max-2-lines'
  ]
%}


<div{{attributes.addClass(classes)}}>
  {% for item in items %}
    {{- item.content }}{{ not loop.last ? ', ' -}}
  {% endfor %}
</div>
