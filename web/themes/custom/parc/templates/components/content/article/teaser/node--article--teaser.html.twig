{#
/**
 * @file
 * Parc override to display a node.
 */
#}

{{ attach_library('parc/card') }}
{{ attach_library('parc/n--article-teaser') }}

{%
  set classes = [
    'node',
    'node--' ~ node.bundle|clean_class,
    view_mode ? 'node--' ~ node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    'card',
    'position-relative',
    content.field_classes.0|render|clean_class,
  ]
%}

<article{{attributes.addClass(classes)}}>
  {{ title_prefix }}
  {{ title_suffix }}

  {{ content.field_image }}

  <div class="card-body">
    <div class="meta d-flex justify-content-between fw-bold">
      <div class="field-category text-uppercase">Initiatives, thematic Area</div>
      <div class="field-date">12.12.2022</div>
    </div>

    <div class="article-content d-flex flex-grow-1 flex-column justify-content-between align-items-start">
      <h4 class="card-title fw-bold">
        News headline introducing the news item
      </h4>

      <a class="btn btn-clear btn-arrow stretched-link" href="#">Read more</a>
    </div>
  </div>

  {{ content.field_scroller }}
</article>
