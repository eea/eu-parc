{#
/**
 * @file
 * Parc override to display a node.
 */
#}

{{ attach_library('parc/n--events-info') }}

{% set color = node.field_tags.entity.field_colors.value.0.color %}

{%
  set classes = [
    'section--' ~ node.bundle|clean_class,
    view_mode ? 'section--' ~ node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
  ]
%}

<section{{attributes.addClass(classes)}}>
  {{content}}

  <a href="#" class="btn-calendar text-uppercase">
    {{- 'Add to Calendar'|t -}}
    <svg width="10" height="10" viewbox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M3.24414 1H7.52571C8.16376 1 8.76704 1.57529 8.76704 2.18374L8.76704 6.52205" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
      <line x1="5.67773" y1="4.49377" x2="1.0607" y2="9.1108" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
    </svg>
  </a>
</section>
