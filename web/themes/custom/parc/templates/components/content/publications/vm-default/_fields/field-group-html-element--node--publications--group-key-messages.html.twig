{#
/**
 * @file
 * Parc theme implementation for a field.
 */
#}

{% if element.field_regulatory_message.0 %}
  {% if element.field_key_messages.2 %}
    {% set showArrow = true %}
  {% endif %}
{% else %}
  {% if element.field_key_messages.3 %}
    {% set showArrow = true %}
  {% endif %}
{% endif %}


<div class="position-relative">
  <div class="carousel-scroll">
    {{- children -}}
  </div>

  {% if showArrow %}
    <button class="d-none d-lg-block slider__arrow slider__arrow-prev js-slider-prev">
      {{- '&#8249;'|t -}}
    </button>

    <button class="d-none d-lg-block slider__arrow slider__arrow-next js-slider-next">
      {{- '&#8250;'|t -}}
    </button>
  {% endif %}
</div>
