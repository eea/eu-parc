{#
/**
 * @file
 * Parc implementation for views to display rows in a grid.
 */
#}
{%
  set classes = [
    'views-view-grid',
    ]
%}

{% if title %}
  <h3>{{ title }}</h3>
{% endif %}

<div{{attributes.addClass(classes)}}>
  {% for row in items %}
    <div{{row.attributes.addClass(row_classes)}}>
      {% for column in row.content %}
        <div class="col-12 col-lg-6 col-xl">
          {{- column.content -}}
        </div>
      {% endfor %}
    </div>
  {% endfor %}
</div>
