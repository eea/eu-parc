<div class="indicators-menu">
  {% for id, topic in topics %}
    <div class="indicators-menu__topic" style="--topic-color: {{ topic.color }}">
      <div class="indicators-menu__topic__main">
        <div class="icon">{{ topic.icon }}</div>
        <div class="title">{{ topic.title }}</div>
      </div>
    </div>
    <div class="indicators-menu__topic__children accordion" id="topic-{{ id }}">
      {% for child_id, child in topic.children %}
        <div class="accordion-item">
          <div class="accordion-header">
            <button id="button-topic--{{ child_id }}" class="btn link-ta collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#topic-{{ child_id }}" aria-expanded="false" aria-controls="topic-{{ child_id }}">
              {{ child.title }}
              <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" viewBox="0 0 8 8">
                <line x2="6" transform="translate(1 4)" fill="none" stroke="#008475" stroke-linecap="round" stroke-width="2"></line>
                <line class="line-2" y1="6" transform="translate(4 1)" fill="none" stroke="#008475" stroke-linecap="round" stroke-width="2"></line>
              </svg>
            </button>
          </div>
          <div id="topic-{{ child_id }}" class="accordion-collapse collapse" aria-labelledby="button-topic--{{ child_id }}" style="">
            {% for group in child.groups %}
              <div class="group">
                <div class="group__title">
                  {{ group.label }}
                </div>
                <div class="group__links">
                  {% for item in group.items %}
                    {{ item }}
                  {% endfor %}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>
  {% endfor %}
</div>
